URxvt*depth: 32
URxvt*colorBD:          #ffffff
URxvt*scrollBar: false
URxvt*scrollTtyOutput: false
URxvt*skipScroll: true
URxvt*fading: 30
URxvt*visualBell: false
URxvt.letterSpace: -4
URxvt*font: xft:terminus-medium:pixelsize:12,xft:Terminess\ Powerline:size=24,xft:Kochi Gothic:antialias=false
URxvt*boldFont: xft:terminus:bold:pixelsize:12,xft:kochi-gothic-bold:antialias=false
URxvt*italicFont:  xft:Bitstream Vera Sans Mono:italic:autohint=true:pixelsize=12
URxvt*boldItalicFont:  xft:Bitstream Vera Sans Mono:bold:italic:autohint=true:pixelsize=12

URxvt*perl-ext:
URxvt*perl-ext-common: default,clipboard

URxvt*keysym.Shift-Control-C: perl:clipboard:copy
URxvt*keysym.Shift-Control-V: perl:clipboard:paste
URxvt*clipboard.copycmd: xsel -ib
URxvt*clipboard.pastecmd: xsel -ob

! special
*.foreground:   #d2c5bc
*.background:   #101010
URxvt*background: [80]#101010
*.cursorColor:  #d2c5bc

! black
*.color0:       #0c0d0e
*.color8:       #737475

! red
*.color1:       #e31a1c
*.color9:       #e31a1c

! green
*.color2:       #31a354
*.color10:      #31a354

! yellow
*.color3:       #dca060
*.color11:      #dca060

! blue
*.color4:       #3182bd
*.color12:      #3182bd

! magenta
*.color5:       #756bb1
*.color13:      #756bb1

! cyan
*.color6:       #80b1d3
*.color14:      #80b1d3

! white
*.color7:       #b7b8b9
*.color15:      #fcfdfe


! Fixing the escape codes
URxvt.keysym.Control-Up:   \033[1;5A
URxvt.keysym.Control-Down:    \033[1;5B
URxvt.keysym.Control-Left:    \033[1;5D
URxvt.keysym.Control-Right:    \033[1;5C

URxvt.inputMethod: ibus
URxvt.preeditType: OverTheSpot
